@model front_asp.Models._Comentario

<head>
    <meta charset="utf-8" />
    <title>ASP - SpringBoot</title>
    <link href="~/css/estilo.css" rel="stylesheet" type="text/css">
    <script src="https://code.jquery.com/jquery-3.6.0.js"
        integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/0f02ee1723.js" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.js"
        integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
</head>

@{
    ViewData["Title"] = "ASP - Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="body-index" class="margin-top-3">
    <div style="width: 50%" class="center">
        <div class="card center">
            <div id="btncomments" class="button button-block button-pink" href="">
                Actualizar Comentario
            </div>

            <div id="formularioEdit" class="container margin-top-1">
                <form asp-action="Editar" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label"></label>
                        <input  required asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Correo" class="control-label"></label>
                        <input required type="email" asp-for="Correo" class="form-control" />
                        <span asp-validation-for="Correo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Asunto" class="control-label"></label>
                        <input required asp-for="Asunto" class="form-control" />
                        <span asp-validation-for="Asunto" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Comentario" class="control-label"></label>
                        <input required name = "comen" asp-for="Comentario" class="form-control" />
                        <span asp-validation-for="Comentario" class="text-danger"></span>
                    </div>
                    <div>
                        <button asp-action="" class="button button-orange margin-min"> <i class="fa-solid fa-angle-left"></i>  Volver</button>
                        <button type="submit" value="Create" class="button button-blue margin-min">Guardar <i class="fa-solid fa-floppy-disk"></i></button>

                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

